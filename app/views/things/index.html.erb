<p id="notice"><%= notice %></p>
<div class="container flex-column flex-wrap text-red" >

<h1 class="red-card">Things</h1>

<table >
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr class="border-green">
        <td><%= thing.title %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path, class: "text-red-700" %>
</div>
